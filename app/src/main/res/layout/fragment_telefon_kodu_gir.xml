<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/beyaz"
             tools:context=".Login.TelefonKoduGirFragment">

    <TextView
            android:text="ONAY KODUNU GİR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textStyle="bold"
            android:textSize="16sp" android:textColor="@color/siyah" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Şu numaraya gönderdiğimiz 6 haneli kodu gir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:textColor="@color/siyah" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <TextView
            android:text="5305888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTelefon" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="@color/siyah"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:background="@drawable/register_edit_text"
            android:padding="16dp"
            android:id="@+id/etOnayKodu" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTelefon" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Onay Kodu" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="İleri"
            android:textAllCaps="false"
            android:textColor="@color/mavi"
            android:background="@drawable/register_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTelKodIleri" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etOnayKodu" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbTelNoOnayla"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTelKodIleri" android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>