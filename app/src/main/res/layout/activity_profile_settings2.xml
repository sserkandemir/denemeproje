<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile.ProfileSettingsActivity">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:id="@+id/profileSettingsRoot">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tab_back"
                android:id="@+id/imgBack" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="Ayarlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="16sp"
                android:textColor="@color/siyah" android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgBack"
                app:layout_constraintTop_toTopOf="@+id/imgBack" app:layout_constraintStart_toEndOf="@+id/imgBack"
                android:layout_marginStart="24dp"/>
        <View android:layout_width="match_parent" android:layout_height="2dp"
              android:background="@color/golgelik"
              android:id="@+id/golgelik" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent">
        </View>
        <TextView
                android:text="Hesap Ayarları"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvHesapAyarlari" android:textStyle="bold"
                android:textSize="16sp" android:textColor="@color/siyah"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/golgelik"/>
        <TextView
                android:text="Profil Düzenle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvProfilDuzenleHesapAyarlari" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHesapAyarlari" android:textColor="@color/siyah"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Beğendiğim Gönderiler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvBegendigimGonderiler" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvProfilDuzenleHesapAyarlari"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:textColor="@color/siyah" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Şifreni Değiştir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvSifreniDegistir" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvBegendigimGonderiler" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:textColor="@color/siyah"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Kaydedilenler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvKaydedilenler" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvSifreniDegistir" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:textColor="@color/siyah" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Gizli Hesap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvGizliHesap" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvKaydedilenler" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textColor="@color/siyah"/>
        <TextView
                android:text="Arama Geçmişini Sil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAramaGecmisi" android:layout_marginTop="34dp"
                app:layout_constraintTop_toBottomOf="@+id/tvGizliHesap" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textColor="@color/mavi"/>
        <TextView
                android:text="Çıkış Yap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvCikisYap" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAramaGecmisi" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textColor="@color/mavi"/>
        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx android:layout_width="match_parent"
                                                                    android:layout_height="50dp"
                                                                    android:background="@color/slctickmavi"
                                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                                    app:menu="@menu/bottom_navigation_menu"
                                                                    app:layout_constraintStart_toStartOf="parent"
                                                                    app:layout_constraintEnd_toEndOf="parent"
                                                                    android:id="@+id/bottomNavigationView">

        </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>


    </android.support.constraint.ConstraintLayout>

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/profileSettingsContainer"></FrameLayout>


</android.support.constraint.ConstraintLayout>